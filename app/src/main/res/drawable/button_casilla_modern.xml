<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_casilla_pressed" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="@color/progress_color" />
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_casilla_normal" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/button_border" />
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>

