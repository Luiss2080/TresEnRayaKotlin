<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con título y estadísticas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/card_background"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título principal -->
                <TextView
                    android:id="@+id/textoTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRES EN RAYA"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginBottom="20dp"
                    android:letterSpacing="0.1"
                    android:background="@color/primary_dark"
                    android:padding="16dp" />

                <!-- Panel de estadísticas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:background="@drawable/stats_background"
                    android:padding="12dp">

                    <!-- Victorias X -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/player_x_stats_bg"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/textoVictoriasX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/player_x_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JUGADOR X"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <!-- Empates -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/empate_stats_bg"
                        android:padding="8dp"
                        android:layout_marginHorizontal="4dp">

                        <TextView
                            android:id="@+id/textoEmpates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/empate_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EMPATES"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <!-- Victorias O -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/player_o_stats_bg"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/textoVictoriasO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/player_o_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JUGADOR O"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Información del turno actual -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/turn_card_background"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textoTurnoActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TURNO DEL JUGADOR X"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:background="@color/primary_dark"
                    android:padding="12dp" />

                <!-- Barra de progreso de turno -->
                <ProgressBar
                    android:id="@+id/progressBarTurno"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="12dp"
                    android:progress="50"
                    android:progressTint="@color/progress_x"
                    android:progressBackgroundTint="@color/progress_background" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tablero de juego moderno -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/game_board_background"
            app:cardElevation="12dp"
            app:cardCornerRadius="20dp">

            <GridLayout
                android:id="@+id/tableroJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_gravity="center"
                android:padding="16dp">

                <!-- Fila 1 -->
                <Button
                    android:id="@+id/botonCasilla00"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla01"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla02"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <!-- Fila 2 -->
                <Button
                    android:id="@+id/botonCasilla10"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla12"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <!-- Fila 3 -->
                <Button
                    android:id="@+id/botonCasilla20"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla21"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla22"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />
            </GridLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Mensaje de estado dinámico -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMensajeEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/winner_card_background"
            app:cardElevation="6dp"
            app:cardCornerRadius="15dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textoMensajeEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/victory_glow"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textoMensajeSecundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <!-- Botón Reiniciar Partida -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonReiniciarJuego"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="NUEVA PARTIDA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_gradient"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

            <!-- Botón Reiniciar Estadísticas -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonReiniciarStats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="RESET STATS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_secondary_gradient"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                app:elevation="4dp" />
        </LinearLayout>

        <!-- Información de partidas -->
        <TextView
            android:id="@+id/textoPartidasTotales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PARTIDAS JUGADAS: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_on_dark"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/info_background"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>

    <!-- Título del juego -->
    <TextView
        android:id="@+id/textoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_juego"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="@color/primary_text"
        android:fontFamily="sans-serif-medium" />

    <!-- Información del turno actual -->
    <TextView
        android:id="@+id/textoTurnoActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turno_jugador_x"
        android:textSize="22sp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/secondary_text"
        android:fontFamily="sans-serif"
        android:background="@drawable/background_turno"
        android:padding="12dp"
        android:gravity="center" />

    <!-- Tablero de juego -->
    <GridLayout
        android:id="@+id/tableroJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginBottom="40dp"
        android:background="@color/game_board_background"
        android:padding="8dp"
        android:layout_gravity="center">

        <!-- Fila 1 -->
        <Button
            android:id="@+id/botonCasilla00"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla01"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla02"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <!-- Fila 2 -->
        <Button
            android:id="@+id/botonCasilla10"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla11"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla12"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <!-- Fila 3 -->
        <Button
            android:id="@+id/botonCasilla20"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla21"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla22"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

    </GridLayout>

    <!-- Mensaje de estado del juego -->
    <TextView
        android:id="@+id/textoMensajeEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/winner_text"
        android:textStyle="bold"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium"
        android:gravity="center" />

    <!-- Botón para reiniciar el juego -->
    <Button
        android:id="@+id/botonReiniciarJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reiniciar_juego"
        android:textSize="18sp"
        android:padding="16dp"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white" />

</LinearLayout>
