<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background_light">

    <!-- Título del juego -->
    <TextView
        android:id="@+id/textoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_juego"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="@color/primary_text"
        android:fontFamily="sans-serif-medium" />

    <!-- Información del turno actual -->
    <TextView
        android:id="@+id/textoTurnoActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turno_jugador_x"
        android:textSize="22sp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/secondary_text"
        android:fontFamily="sans-serif"
        android:background="@drawable/background_turno"
        android:padding="12dp"
        android:gravity="center" />

    <!-- Tablero de juego -->
    <GridLayout
        android:id="@+id/tableroJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginBottom="40dp"
        android:background="@color/game_board_background"
        android:padding="8dp"
        android:layout_gravity="center">

        <!-- Fila 1 -->
        <Button
            android:id="@+id/botonCasilla00"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla01"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla02"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <!-- Fila 2 -->
        <Button
            android:id="@+id/botonCasilla10"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla11"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla12"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <!-- Fila 3 -->
        <Button
            android:id="@+id/botonCasilla20"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla21"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

        <Button
            android:id="@+id/botonCasilla22"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@drawable/button_casilla" />

    </GridLayout>

    <!-- Mensaje de estado del juego -->
    <TextView
        android:id="@+id/textoMensajeEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/winner_text"
        android:textStyle="bold"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium"
        android:gravity="center" />

    <!-- Botón para reiniciar el juego -->
    <Button
        android:id="@+id/botonReiniciarJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reiniciar_juego"
        android:textSize="18sp"
        android:padding="16dp"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white" />

</LinearLayout>
