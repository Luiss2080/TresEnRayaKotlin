<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_juego"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/primary_dark"
            android:padding="16dp"
            android:layout_marginBottom="20dp" />

        <!-- Panel de estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:baselineAligned="false"
            android:background="@color/border_light"
            android:padding="12dp"
            android:layout_marginBottom="20dp">

            <!-- Victorias X -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/player_x_background"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textoVictoriasX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_score"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/player_x_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jugador_x"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />
            </LinearLayout>

            <!-- Empates -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/empate_background"
                android:padding="8dp"
                android:layout_marginHorizontal="4dp">

                <TextView
                    android:id="@+id/textoEmpates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_score"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/empate_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empates"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />
            </LinearLayout>

            <!-- Victorias O -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/player_o_background"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textoVictoriasO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_score"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/player_o_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jugador_o"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tablero de juego -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/game_board_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <GridLayout
                android:id="@+id/tableroJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="3">

                <Button
                    android:id="@+id/botonCasilla00"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:background="@color/button_casilla_normal" />

                <Button
                    android:id="@+id/botonCasilla01"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:background="@color/button_casilla_normal" />

                <Button
                    android:id="@+id/botonCasilla02"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:background="@color/button_casilla_normal" />

                <Button
                    android:id="@+id/botonCasilla10"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:background="@color/button_casilla_normal" />

                <Button
                    android:id="@+id/botonCasilla11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:background="@color/button_casilla_normal" />

                <Button
                    android:id="@+id/botonCasilla12"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:background="@color/button_casilla_normal" />

                <Button
                    android:id="@+id/botonCasilla20"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:background="@color/button_casilla_normal" />

                <Button
                    android:id="@+id/botonCasilla21"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:background="@color/button_casilla_normal" />

                <Button
                    android:id="@+id/botonCasilla22"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:background="@color/button_casilla_normal" />
            </GridLayout>
        </LinearLayout>

        <!-- Mensaje de estado dinámico -->
        <LinearLayout
            android:id="@+id/cardMensajeEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/winner_card_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/textoMensajeEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/victory_glow"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textoMensajeSecundario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:textAlignment="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="2">

            <Button
                android:id="@+id/botonReiniciarJuego"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="@string/nueva_partida"
                android:textStyle="bold"
                android:background="@color/button_primary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/botonReiniciarStats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="@string/reset_stats"
                android:textStyle="bold"
                android:background="@color/button_secondary"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Contador de partidas -->
        <TextView
            android:id="@+id/textoPartidasTotales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/partidas_default"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:background="@color/primary_dark"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
