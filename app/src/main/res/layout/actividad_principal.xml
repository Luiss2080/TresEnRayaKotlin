<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Título del juego -->
    <TextView
        android:id="@+id/textoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_juego"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Información del turno actual -->
    <TextView
        android:id="@+id/textoTurnoActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turno_jugador_x"
        android:textSize="20sp"
        android:layout_marginBottom="32dp" />

    <!-- Tablero de juego -->
    <GridLayout
        android:id="@+id/tableroJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginBottom="32dp"
        android:background="@color/black"
        android:padding="4dp">

        <!-- Fila 1 -->
        <Button
            android:id="@+id/botonCasilla00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonCasilla01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonCasilla02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Fila 2 -->
        <Button
            android:id="@+id/botonCasilla10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonCasilla11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonCasilla12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Fila 3 -->
        <Button
            android:id="@+id/botonCasilla20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonCasilla21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonCasilla22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:textSize="36sp"
            android:textStyle="bold" />

    </GridLayout>

    <!-- Mensaje de estado del juego -->
    <TextView
        android:id="@+id/textoMensajeEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_marginBottom="24dp"
        android:visibility="gone" />

    <!-- Botón para reiniciar el juego -->
    <Button
        android:id="@+id/botonReiniciarJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reiniciar_juego"
        android:textSize="16sp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp" />

</LinearLayout>
