<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con título y estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@color/card_background"
            android:padding="20dp"
            android:orientation="vertical">

            <!-- Título principal -->
            <TextView
                android:id="@+id/textoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRES EN RAYA"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.1"
                android:background="@color/primary_dark"
                android:padding="16dp" />

            <!-- Panel de estadísticas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@drawable/stats_background"
                android:padding="12dp">

                <!-- Victorias X -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/player_x_stats_bg"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/textoVictoriasX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/player_x_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JUGADOR X"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Empates -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/empate_stats_bg"
                    android:padding="8dp"
                    android:layout_marginHorizontal="4dp">

                    <TextView
                        android:id="@+id/textoEmpates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/empate_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMPATES"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Victorias O -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/player_o_stats_bg"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/textoVictoriasO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/player_o_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JUGADOR O"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Información del turno actual -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/turn_card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textoTurnoActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TURNO DEL JUGADOR X"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:background="@color/primary_dark"
                android:padding="12dp" />

            <!-- Barra de progreso de turno -->
            <ProgressBar
                android:id="@+id/progressBarTurno"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="250dp"
                android:layout_height="6dp"
                android:layout_marginTop="12dp"
                android:progress="50"
                android:progressTint="@color/progress_x"
                android:progressBackgroundTint="@color/progress_background" />
        </LinearLayout>

        <!-- Tablero de juego moderno -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@color/game_board_background"
            android:padding="16dp">

            <GridLayout
                android:id="@+id/tableroJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_gravity="center">

                <!-- Fila 1 -->
                <Button
                    android:id="@+id/botonCasilla00"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla01"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla02"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <!-- Fila 2 -->
                <Button
                    android:id="@+id/botonCasilla10"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla12"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <!-- Fila 3 -->
                <Button
                    android:id="@+id/botonCasilla20"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla21"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla22"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_margin="4dp"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />
            </GridLayout>
        </LinearLayout>

        <!-- Mensaje de estado dinámico -->
        <LinearLayout
            android:id="@+id/cardMensajeEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/winner_card_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/textoMensajeEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/victory_glow"
                android:textAlignment="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/textoMensajeSecundario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:textAlignment="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <!-- Botón Reiniciar Partida -->
            <Button
                android:id="@+id/botonReiniciarJuego"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="NUEVA PARTIDA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_gradient"
                android:textColor="@color/white" />

            <!-- Botón Reiniciar Estadísticas -->
            <Button
                android:id="@+id/botonReiniciarStats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="RESET STATS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_secondary_gradient"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Información de partidas -->
        <TextView
            android:id="@+id/textoPartidasTotales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PARTIDAS JUGADAS: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_on_dark"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/info_background"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
