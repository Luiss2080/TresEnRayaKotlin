<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con t칤tulo y estad칤sticas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/card_background"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- T칤tulo principal -->
                <TextView
                    android:id="@+id/textoTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="游꿡 TRES EN RAYA"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginBottom="16dp" />

                <!-- Panel de estad칤sticas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Victorias X -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textoVictoriasX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/player_x_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X WINS"
                            android:textSize="12sp"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <!-- Empates -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textoEmpates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/empate_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DRAWS"
                            android:textSize="12sp"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <!-- Victorias O -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textoVictoriasO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/player_o_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O WINS"
                            android:textSize="12sp"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>
                </LinearLayout>

                <!-- L칤der actual -->
                <TextView
                    android:id="@+id/textoLider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="游끥 L칤der: ---"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/winner_text"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/leader_background"
                    android:padding="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Informaci칩n del turno actual -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/turn_card_background"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textoTurnoActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游꿢 Turno del Jugador X"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:fontFamily="sans-serif-medium" />

                <!-- Barra de progreso de turno -->
                <ProgressBar
                    android:id="@+id/progressBarTurno"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="50"
                    android:progressTint="@color/progress_color"
                    android:progressBackgroundTint="@color/progress_background" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tablero de juego moderno -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/game_board_background"
            app:cardElevation="12dp"
            app:cardCornerRadius="20dp">

            <GridLayout
                android:id="@+id/tableroJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_gravity="center"
                android:padding="12dp">

                <!-- Fila 1 -->
                <Button
                    android:id="@+id/botonCasilla00"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="3dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla01"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="3dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla02"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_margin="3dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <!-- Fila 2 -->
                <Button
                    android:id="@+id/botonCasilla10"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="3dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="3dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla12"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_margin="3dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <!-- Fila 3 -->
                <Button
                    android:id="@+id/botonCasilla20"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="3dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla21"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="3dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />

                <Button
                    android:id="@+id/botonCasilla22"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_margin="3dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/button_casilla_modern" />
            </GridLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Mensaje de estado din치mico -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMensajeEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/winner_card_background"
            app:cardElevation="6dp"
            app:cardCornerRadius="15dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textoMensajeEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/winner_text"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textoMensajeSecundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botones de acci칩n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <!-- Bot칩n Reiniciar Partida -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonReiniciarJuego"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="游댃 Nueva Partida"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/button_primary"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

            <!-- Bot칩n Reiniciar Estad칤sticas -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonReiniciarStats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="游늵 Reset Stats"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/button_secondary"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                app:elevation="4dp" />
        </LinearLayout>

        <!-- Informaci칩n de partidas -->
        <TextView
            android:id="@+id/textoPartidasTotales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partidas jugadas: 0"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>
</ScrollView>
